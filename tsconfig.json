{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ]
}